{
  "author": "Nicholas Penree <drudge@conceited.net> (http://penr.ee)",
  "name": "@mykeels/gpg",
  "description": "GPG encryption and decryption in node.js by way of the gpg command-line tool",
  "version": "0.7.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/mykeels/node-gpg.git"
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "mocha test/*.test.js --require @babel/register",
    "test:watch": "npm test -- -w",
    "watch:tsc": "tsc --watch -p ./tsconfig.json",
    "build:tsc": "tsc -p ./tsconfig.json",
    "lint:check": "eslint . --ext=ts"
  },
  "keywords": [
    "gpg",
    "encrypt",
    "decrypt",
    "pgp",
    "gnupg"
  ],
  "main": "./dist/index",
  "typings": "./dist/index.d.ts",
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/register": "^7.11.5",
    "@types/node": "^15.0.1",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-plugin-source-map-support": "^2.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.0.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test -- --watchAll=false"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "bugs": {
    "url": "https://github.com/mykeels/node-gpg/issues"
  },
  "homepage": "https://github.com/mykeels/node-gpg#readme",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "license": "MIT"
}
